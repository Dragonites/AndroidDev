<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Er zijn meer manieren om tot eenzelfde layout te komen! -->

    <!-- We zetten een dummy image en kleur om een idee te krijgen van het eindresultaat -->
    <ImageView
        android:id="@+id/candidate_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bernie_sanders"
        android:background="#4f81bd"/>

    <TextView
        android:id="@+id/candidate_party"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dummy partij"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/candidate_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donald Duck"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/candidate_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="age"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:id="@+id/votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="69"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/votes_button"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="+"
            android:layout_toEndOf="@+id/votes"
            android:layout_toRightOf="@+id/votes"
            android:onClick="voteButtonClicked"/>
    </RelativeLayout>

</LinearLayout>